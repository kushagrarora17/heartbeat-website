---
import { createFullSlug, extractIdFromSlug } from "../../utils/slug.js";
import { allArticles } from "../../content/articles/all-articles.js";

export async function getStaticPaths() {
  return allArticles.map((article) => ({
    params: { slug: createFullSlug(article.id, article.title) },
    props: { article },
  }));
}

const { article } = Astro.props;

import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
  title={`${article.title} - H.E.A.R.T. Beat Improv`}
  description={article.excerpt}
  image={article.image}
  type="article"
>
  <!-- Article Header -->
  <article class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Article Meta -->
        <div class="text-center mb-12">
          <div class="flex items-center justify-center gap-4 mb-6">
            <span
              class="bg-primary/20 text-primary px-3 py-1 rounded-full text-sm font-semibold"
            >
              {
                article.category.charAt(0).toUpperCase() +
                  article.category.slice(1).replace("-", " ")
              }
            </span>
            <span class="text-dark/60">{article.readTime}</span>
          </div>

          <h1
            class="font-display text-4xl md:text-5xl font-bold mb-6 leading-tight"
          >
            {article.title}
          </h1>

          <p
            class="text-xl text-dark/80 mb-8 leading-relaxed max-w-3xl mx-auto"
          >
            {article.excerpt}
          </p>

          <!-- Author Info -->
          <div class="flex items-center justify-center gap-4 mb-8">
            <div
              class="w-12 h-12 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center"
            >
              <span class="text-white font-bold"
                >{article.author.charAt(0)}</span
              >
            </div>
            <div class="text-left">
              <div class="font-semibold">{article.author}</div>
              <div class="text-dark/60 text-sm">
                {
                  new Date(article.date).toLocaleDateString("en-IN", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })
                }
              </div>
            </div>
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap justify-center gap-2 mb-8">
            {
              article.tags.map((tag) => (
                <span class="bg-gray-100 text-dark/70 px-3 py-1 rounded-full text-sm">
                  #{tag}
                </span>
              ))
            }
          </div>
        </div>

        <!-- Article Image -->
        <div
          class="h-64 md:h-96 bg-gradient-to-br from-primary/20 to-accent/20 rounded-2xl flex items-center justify-center mb-12"
        >
          <span class="text-6xl">
            {
              article.category === "technique"
                ? "üéØ"
                : article.category === "personal-growth"
                  ? "üå±"
                  : article.category === "business"
                    ? "üíº"
                    : article.category === "community"
                      ? "ü§ù"
                      : article.category === "beginner"
                        ? "üåü"
                        : article.category === "history"
                          ? "üìö"
                          : "üìù"
            }
          </span>
        </div>

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none mb-12">
          <div set:html={article.content} />
        </div>

        <!-- Author Bio -->
        <div
          class="bg-gradient-to-br from-primary/5 to-accent/5 rounded-2xl p-8 mb-12"
        >
          <h3 class="font-display text-2xl font-semibold mb-4">
            About the Author
          </h3>
          <div class="flex items-start gap-4">
            <div
              class="w-16 h-16 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center flex-shrink-0"
            >
              <span class="text-white font-bold text-xl"
                >{article.author.charAt(0)}</span
              >
            </div>
            <div>
              <h4 class="font-semibold text-xl mb-2">{article.author}</h4>
              <p class="text-dark/80">{article.authorBio}</p>
            </div>
          </div>
        </div>

        <!-- Share Section -->
        <div class="text-center mb-12">
          <h3 class="font-display text-xl font-semibold mb-4">
            Share this article
          </h3>
          <div class="flex justify-center gap-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(article.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-500 text-white p-3 rounded-full hover:bg-blue-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-600 text-white p-3 rounded-full hover:bg-blue-700 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(article.title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-700 text-white p-3 rounded-full hover:bg-blue-800 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Articles -->
  <section class="py-20 gradient-bg">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
          More <span class="gradient-text">Articles</span>
        </h2>
        <p class="text-xl text-dark/80">
          Continue exploring our collection of improv insights
        </p>
      </div>

      <div class="text-center">
        <a
          href="/articles"
          class="inline-block bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-accent transition-all duration-300 hover:scale-105"
        >
          View All Articles
        </a>
      </div>
    </div>
  </section>

  <style>
    .prose {
      @apply text-dark/80;
    }

    .prose h2 {
      @apply font-display text-2xl font-semibold mt-12 mb-6 text-dark;
    }

    .prose h3 {
      @apply font-display text-xl font-semibold mt-8 mb-4 text-dark;
    }

    .prose p {
      @apply mb-6 leading-relaxed;
    }

    .prose ul {
      @apply space-y-2 mb-6;
    }

    .prose li {
      @apply leading-relaxed;
    }

    .prose blockquote {
      @apply border-l-4 border-primary pl-6 my-8 italic bg-primary/5 py-4 rounded-r-lg;
    }

    .prose blockquote p {
      @apply mb-2;
    }

    .prose blockquote cite {
      @apply text-sm text-dark/60 not-italic font-medium;
    }

    .prose strong {
      @apply font-semibold text-dark;
    }
  </style>
</BaseLayout>


