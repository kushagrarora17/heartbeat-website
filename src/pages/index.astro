---
import BaseLayout from "../layouts/BaseLayout.astro";
import { createFullSlug } from "../utils/slug.js";
import { URLS } from "../constants.js";
import { allEvents } from "../content/events/all-events.js";

// Get up to 3 upcoming events, sorted by soonest date
const upcomingEvents = allEvents
  .filter((event) => new Date(event.date) > new Date())
  .sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime())
  .slice(0, 3);

const testimonials = [
  {
    name: "Priya Sharma",
    role: "Regular Participant",
    quote:
      "H.E.A.R.T. Beat Improv has transformed my confidence and creativity. The community is incredibly welcoming!",
    image: "/images/testimonial1.jpg",
  },
  {
    name: "Arjun Menon",
    role: "Workshop Graduate",
    quote:
      "From a shy introvert to performing on stage - this journey has been life-changing. Thank you, H.E.A.R.T. Beat!",
    image: "/images/testimonial2.jpg",
  },
  {
    name: "Sneha Patel",
    role: "Performer",
    quote:
      "The skills I've learned here have helped me in my professional life too. Improv teaches you to think on your feet!",
    image: "/images/testimonial3.jpg",
  },
];
---

<BaseLayout
  title="H.E.A.R.T. Beat Improv - Bangalore's Premier Improv Comedy Community"
  description="Join Bangalore's most vibrant improv comedy community. Learn, laugh, and perform with H.E.A.R.T. Beat Improv. Workshops, shows, and events for all skill levels."
>
  <!-- Hero Section -->
  <section
    class="relative min-h-screen flex items-center justify-center overflow-hidden"
  >
    <div class="absolute inset-0 gradient-bg"></div>
    <div
      class="absolute inset-0 bg-gradient-to-br from-primary/20 via-transparent to-accent/20"
    >
    </div>

    <div class="relative z-10 container mx-auto px-4 text-center">
      <h1 class="font-display text-5xl md:text-7xl font-bold mb-6">
        <span class="gradient-text">H.E.A.R.T. Beat</span><br />
        <span class="text-dark">Improv</span>
      </h1>
      <p class="text-xl md:text-2xl text-dark/80 mb-8 max-w-3xl mx-auto">
        Bangalore's premier improv comedy community where <strong
          >creativity meets laughter</strong
        >. Join us for workshops, performances, and unforgettable experiences.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href={URLS.REGISTRATION_FORM}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-accent transition-all duration-300 hover:scale-105 shadow-lg"
        >
          Join Our Community
        </a>
        <a
          href="/events"
          class="border-2 border-primary text-primary px-8 py-4 rounded-full text-lg font-semibold hover:bg-primary hover:text-white transition-all duration-300"
        >
          View Events
        </a>
      </div>
    </div>

    <!-- Floating elements -->
    <div
      class="absolute top-20 left-10 w-20 h-20 bg-primary/20 rounded-full blur-xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-32 h-32 bg-accent/20 rounded-full blur-xl animate-pulse delay-1000"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/4 w-16 h-16 bg-secondary/40 rounded-full blur-lg animate-bounce delay-500"
    >
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
          What is <span class="gradient-text">H.E.A.R.T. Beat</span>?
        </h2>
        <p class="text-xl text-dark/80 leading-relaxed">
          H.E.A.R.T. Beat Improv is Bangalore's most vibrant improv comedy
          community. We believe in the power of spontaneous creativity,
          collaborative storytelling, and the magic that happens when people
          come together to create something beautiful in the moment.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center group">
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform"
          >
            <span class="text-2xl">üé≠</span>
          </div>
          <h3 class="font-display font-semibold text-xl mb-2">Performance</h3>
          <p class="text-dark/70">
            Regular showcases and performances across Bangalore
          </p>
        </div>

        <div class="text-center group">
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform"
          >
            <span class="text-2xl">üé™</span>
          </div>
          <h3 class="font-display font-semibold text-xl mb-2">Workshops</h3>
          <p class="text-dark/70">
            Learn from experienced improvisers in a supportive environment
          </p>
        </div>

        <div class="text-center group">
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform"
          >
            <span class="text-2xl">ü§ù</span>
          </div>
          <h3 class="font-display font-semibold text-xl mb-2">Community</h3>
          <p class="text-dark/70">
            A welcoming space for artists and comedy enthusiasts
          </p>
        </div>

        <div class="text-center group">
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform"
          >
            <span class="text-2xl">‚ú®</span>
          </div>
          <h3 class="font-display font-semibold text-xl mb-2">Growth</h3>
          <p class="text-dark/70">
            Develop confidence, creativity, and communication skills
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="py-20 gradient-bg">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">Upcoming Events</span>
        </h2>
        <p class="text-xl text-dark/80 max-w-2xl mx-auto">
          Don't miss out on our exciting workshops, performances, and community
          gatherings.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {
          upcomingEvents.map((event) => (
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden card-hover">
              <div class="h-48 bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center">
                <span class="text-4xl">üé≠</span>
              </div>
              <div class="p-6">
                <h3 class="font-display font-semibold text-xl mb-2">
                  {event.title}
                </h3>
                <div class="flex items-center text-dark/70 mb-2">
                  <span class="mr-2">üìÖ</span>
                  <span>
                    {new Date(event.date).toLocaleDateString("en-IN", {
                      weekday: "long",
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </span>
                </div>
                <div class="flex items-center text-dark/70 mb-2">
                  <span class="mr-2">‚è∞</span>
                  <span>{event.time}</span>
                </div>
                <div class="flex items-center text-dark/70 mb-4">
                  <span class="mr-2">üìç</span>
                  <span>{event.venue}</span>
                </div>
                <p class="text-dark/80 mb-4">{event.description}</p>
                <div class="flex items-center justify-between">
                  <span class="text-2xl font-bold text-primary">
                    {event.price}
                  </span>
                  <a
                    href={`/events/${createFullSlug(event.id, event.title)}`}
                    class="bg-primary text-white px-6 py-2 rounded-full hover:bg-accent transition-colors font-medium"
                  >
                    Learn More
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center">
        <a
          href="/events"
          class="inline-block bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-accent transition-all duration-300 hover:scale-105"
        >
          View All Events
        </a>
      </div>
    </div>
  </section>

  <!-- Why Improv Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
            Why <span class="gradient-text">Improv</span>?
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h3 class="font-display text-2xl font-semibold mb-6">
              Benefits of Improv Comedy
            </h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <span class="text-primary mr-3 mt-1">‚úì</span>
                <span
                  ><strong>Confidence Building:</strong> Overcome stage fright and
                  social anxiety</span
                >
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-3 mt-1">‚úì</span>
                <span
                  ><strong>Creative Thinking:</strong> Develop quick wit and innovative
                  problem-solving</span
                >
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-3 mt-1">‚úì</span>
                <span
                  ><strong>Communication Skills:</strong> Improve listening and collaborative
                  abilities</span
                >
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-3 mt-1">‚úì</span>
                <span
                  ><strong>Stress Relief:</strong> Laugh, play, and release everyday
                  tensions</span
                >
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-3 mt-1">‚úì</span>
                <span
                  ><strong>Networking:</strong> Meet like-minded creative individuals</span
                >
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-3 mt-1">‚úì</span>
                <span
                  ><strong>Professional Growth:</strong> Skills that translate to
                  workplace success</span
                >
              </li>
            </ul>
          </div>

          <div
            class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-2xl p-8"
          >
            <h3 class="font-display text-2xl font-semibold mb-4">
              Perfect for Everyone
            </h3>
            <p class="text-dark/80 mb-6">
              Whether you're a complete beginner or an experienced performer,
              our community welcomes all. No acting experience required ‚Äì just
              bring your curiosity and willingness to play!
            </p>
            <div class="grid grid-cols-2 gap-4 text-center">
              <div class="bg-white rounded-lg p-4">
                <div class="text-2xl mb-2">üåü</div>
                <div class="font-semibold">Beginners</div>
              </div>
              <div class="bg-white rounded-lg p-4">
                <div class="text-2xl mb-2">üé≠</div>
                <div class="font-semibold">Performers</div>
              </div>
              <div class="bg-white rounded-lg p-4">
                <div class="text-2xl mb-2">üíº</div>
                <div class="font-semibold">Professionals</div>
              </div>
              <div class="bg-white rounded-lg p-4">
                <div class="text-2xl mb-2">üéì</div>
                <div class="font-semibold">Students</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 gradient-bg">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
          What Our <span class="gradient-text">Community</span> Says
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg card-hover">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center mr-4">
                  <span class="text-white font-bold">
                    {testimonial.name.charAt(0)}
                  </span>
                </div>
                <div>
                  <h4 class="font-semibold">{testimonial.name}</h4>
                  <p class="text-dark/70 text-sm">{testimonial.role}</p>
                </div>
              </div>
              <p class="text-dark/80 italic">"{testimonial.quote}"</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-dark text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
        Ready to <span class="gradient-text">Join the Fun</span>?
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Take the first step into the world of improv comedy. Join our welcoming
        community today!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href={URLS.REGISTRATION_FORM}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-accent transition-all duration-300 hover:scale-105 shadow-lg"
        >
          Register Now
        </a>
        <a
          href="/events"
          class="border-2 border-primary text-primary px-8 py-4 rounded-full text-lg font-semibold hover:bg-primary hover:text-white transition-all duration-300"
        >
          Browse Events
        </a>
      </div>
    </div>
  </section>
</BaseLayout>


